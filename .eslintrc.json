{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "react-app", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"globals": {
		"global": true
	},
	"rules": {
		"no-unused-vars": "error",
		"no-constant-condition": ["error", { "checkLoops": false }],
		"react/jsx-uses-react": "off",
		"react/react-in-jsx-scope": "off",
		"no-lone-blocks": "off",
		"quotes": ["error", "single"]
	}
}
